<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
	<!-- Bootstrap Core CSS -->
	    <link href="{{ asset('/bundles/acmeuser/css/bootstrap.min.css') }}" rel="stylesheet">

	    <!-- MetisMenu CSS -->
	    <link href="{{ asset('/bundles/acmeuser/css/plugins/metisMenu/metisMenu.min.css') }}" rel="stylesheet">

	    <!-- Custom CSS -->
	    <link href="{{ asset('/bundles/acmeuser/css/sb-admin-2.css') }}" rel="stylesheet">

	    <!-- Custom Fonts -->
	    <link href="{{ asset('/bundles/acmeuser/font-awesome-4.1.0/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    </head>
    
    <body>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                
            {% endif %}
        </div>

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
		 <!-- jQuery Version 1.11.0 -->
	    <script src="{{ asset('/bundles/acmeuser/js/jquery-1.11.0.js') }}"></script>

	    <!-- Bootstrap Core JavaScript -->
	    <script src="{{ asset('/bundles/acmeuser/js/bootstrap.min.js') }}"></script>

	    <!-- Metis Menu Plugin JavaScript -->
	    <script src="{{ asset('/bundles/acmeuser/js/plugins/metisMenu/metisMenu.min.js') }}"></script>

	    <!-- Custom Theme JavaScript -->
	    <script src="{{ asset('/bundles/acmeuser/js/sb-admin-2.js') }}"></script>
    </body>

</html>

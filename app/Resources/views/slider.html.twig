<section id="main-slider" class="no-margin">
    <div class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#main-slider" data-slide-to="0" class="active"></li>
            <li data-target="#main-slider" data-slide-to="1"></li>
            <li data-target="#main-slider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            {% for image in images %}
                {% if (loop.index is even) %}
                    <div class="item active" style="background-image: url('{{asset(['uploads/slider_background_image/',image.backgroundimage]|join)}}')">
                {% else %}
                    <div class="item" style="background-image: url('{{asset(['uploads/slider_background_image/',image.backgroundimage]|join)}}')">
                {% endif %}    
                    <div class="container">
                        <div class="row slide-margin">
                            <div class="col-sm-6">
                                <div class="carousel-content">
                                    <h1 class="animation animated-item-1">{{ image.title }}</h1>
                                    <h2 class="animation animated-item-2">{{ image.description }}</h2>
                                    <a class="btn-slide animation animated-item-3" href="#">Read More</a>
                                </div>
                            </div>

                            <div class="col-sm-6 hidden-xs animation animated-item-4">
                                <div class="slider-img">
                                    <img src="{{asset(['uploads/',image.image]|join)}}" class="img-responsive">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}    
        </div><!--/.carousel-inner-->
    </div><!--/.carousel-->
    <a class="prev hidden-xs" href="#main-slider" data-slide="prev">
        <i class="fa fa-chevron-left"></i>
    </a>
    <a class="next hidden-xs" href="#main-slider" data-slide="next">
        <i class="fa fa-chevron-right"></i>
    </a>
</section><!--/#main-slider-->
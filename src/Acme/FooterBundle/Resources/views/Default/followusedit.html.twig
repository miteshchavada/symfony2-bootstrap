{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Followus Add Form</h1>
        </div>
    </div>
    <div class="row">
                <center>
                <form action="{{ path('acme_followedit',{ 'id': follow.id } ) }}" method="post" {{ form_enctype(form) }} class="form-group">
                    {% if not form.vars.valid %}
                    <div class="alert alert-danger">    
                        {{ form_errors(form.title)}}
                        {{ form_errors(form.logo)}}
                        {{ form_errors(form.link)}}
                    </div>
                    {% endif %}
                    <div class="form-group col-lg-12">
                        {{ form_label(form.title, 'Title: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, { 'attr': {'class': 'form-control','placeholder': 'Title'} }) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        {{ form_label(form.logo, 'Logo: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-1">
                        <img src="{{asset(['uploads/follow/',follow.id,'/',follow.logo]|join)}}"/>
                        </div>
                    </div>    
                    <div class="form-group col-lg-12">
                        {{ form_label(form.logo, 'Logo: ', {'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-2">
                        {{ form_widget(form.logo, { 'attr': {'class': 'btn btn-default btn-file'} }) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        {{ form_label(form.link, 'Link: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.link, { 'attr': {'class': 'form-control','placeholder': 'Link'} }) }}
                        </div>
                    </div>    
                    <div class="form-group col-lg-6">
                        <input type="submit" formnovalidate value="Edit" name="edit" class="btn btn-primary"/>
                        <input type="reset" name="Reset" value="Reset" class="btn btn-danger" onclick="javascript:window.location.href='{{ path('acme_footer_followus') }}'"/>
                    </div>
                </form>
                </center>        
        </div>
{% endblock %}
{% endblock %}



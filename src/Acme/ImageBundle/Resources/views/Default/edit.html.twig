{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Slider Edit</h1>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
                <center>
                <form action="{{ path('acme_image_edit', {'id': id } ) }}" method="post" id="image_edit_form" enctype="multipart/form-data" name="image_edit_form" class="form-group">
                {% if not form.vars.valid %}
                    <div class="alert alert-danger">    
                    {{ form_errors(form.image)}}
                    {{ form_errors(form.title)}}
                    {{ form_errors(form.link)}}
                    {{ form_errors(form.description)}}
                    {{ form_errors(form.backgroundimage)}}
                    </div>
                {% endif %}
                <div class="form-group col-lg-12">
                    {{ form_label(form.title, 'Title: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.title, { 'attr': {'class': 'form-control','placeholder': 'Title'} }) }}
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    {{ form_label(form.link, 'Link: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.link, { 'attr': {'class': 'form-control','placeholder': 'Link'} }) }}
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    {{ form_label(form.description, 'Description: ', {'label_attr': {'class': 'control-label col-sm-2'} }) }}
                    <div class="col-sm-10">
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control','placeholder': 'Description'} }) }}
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    {{ form_label(form.image, 'Image: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-2">
                    <img src="{{asset(['uploads/', image]|join)}}" style="width:80px; height: 50px;" />
                    </div>
                </div> 
                <div class="form-group col-lg-12">
                    {{ form_label(form.image ,'File: ', {'label_attr': {'class': 'control-label col-sm-2'} } ) }}
                    <div class="col-sm-2">
                    {{ form_widget(form.image, { 'attr': {'class': 'btn btn-default btn-file' } }) }}
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    {{ form_label(form.backgroundimage, 'Background Image: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-2">
                    <img src="{{asset(['uploads/slider_background_image/', backgroundimage]|join)}}" style="width:80px; height: 50px;" />
                    </div>
                </div> 
                <div class="form-group col-lg-12">
                    {{ form_label(form.backgroundimage ,'File: ', {'label_attr': {'class': 'control-label col-sm-2'} } ) }}
                    <div class="col-sm-2">
                    {{ form_widget(form.backgroundimage, { 'attr': {'class': 'btn btn-default btn-file' } }) }}
                    </div>
                </div>    
                <div class="form-group col-lg-12">
                    <div class="col-sm-6">
                    <input type="submit" value="Edit" name="edit" class="btn btn-primary" />
                    <input type="reset" name="Reset" value="Reset" class="btn btn-danger" onclick="javascript:window.location.href='{{ path('acme_image') }}'"/>
                    </div>
                </div>
                </form>
                </center>
            </div>        
{% endblock %}
{% endblock %}

{% extends '::base.html.twig' %}
{% block body %}
{% block content %}

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Slider</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Slider Image List
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="add"><button type="button" class="btn btn-primary btn-sm">Add Slider</button></a></div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                    <thead>
                                        <tr>
                                            <th>Serial No</th>
                                            <th>Image</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Operations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
					{% for im in image %}
					<tr class="gradeA">
					    <td>{{ loop.index }}</td>
					    <td><img src="{{asset(['uploads/', im.image]|join)}}" style="width:80px; height: 50px;" /></td>
					    <td>{{ im.title }}</td>
					    <td>{{ im.description }}</td>    
					    <td><a href="{{ path('acme_image_edit',{ 'id':im.id } ) }}" class="btn btn-primary">edit</a>
					    <a href="{{ path('acme_image_delete',{ 'id':im.id } ) }}" onclick="return confirm('are sure delete?')" class="btn btn-danger">delete</a></td>
					</tr>
					{% endfor %}
				   </tbody>
				</tr>
				</table>
			   </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            <!-- /.row -->
{% endblock %}
{% endblock %}

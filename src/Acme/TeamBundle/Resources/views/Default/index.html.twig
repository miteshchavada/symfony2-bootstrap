    <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Teams</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Team List
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="{{ path('add_team') }}"><button type="button" class="btn btn-primary btn-sm">Add Team</button></a></div>

{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">News List</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            News List
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="news/add"><button type="button" class="btn btn-primary btn-sm">Add News</button></a></div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Serial No</th>
                                            <th>Title</th>
					    <th>Image</th>
                                            <th>Description</th>
                                            <th>Operations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
					{% for product in news %}
                                         <tr class="gradeA">
                                            <td>{{ loop.index }}</td>
                                            <td>{{ product.title }}</td>
                                            <td><img src="{{asset(['uploads/news/',product.id,'/',product.image]|join)}}" style="width:80px; height: 50px;" /></td>
                                            <td width="250px;">{{ product.description }}</td>
                                            <td>
						<a href="{{ path('acme_news_edit',{ 'id':product.id } ) }}" class="btn btn-primary">edit</a>
        					<a href="{{ path('acme_news_delete',{ 'id':product.id } ) }}" class="btn btn-danger" onclick="return confirm('are sure delete?')">delete</a></li>
					    </td>
                                        </tr>
					{% endfor %}
                                    </tbody>
				    <!-- div>{{ paginator|raw }}</div--> 
                                </table>
                            </div>
                    </div>
                </div>
            </div>
{% endblock %}
{% endblock %}

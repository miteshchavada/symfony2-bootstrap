{% extends '::base.html.twig' %}
{% block body %}
    {% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Why People like us?</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Peoples List
                        <div style="float:right; margin-top:-15px;" class="panel-heading"><a href="people/add"><button type="button" class="btn btn-primary btn-sm">Add People</button></a></div>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Serial No</th>
                                        <th>Title</th>
                                        <th>Image</th>
                                        <th>Description</th>
                                        <th>Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for people in peoples %}
                                        <tr class="gradeA">
                                            <td>{{ loop.index }}</td>
                                            <td>{{ people.title }}</td>
                                            <td><img src="{{asset(['uploads/peoples/',people.id,'/',people.image]|join)}}" style="width:80px; height: 50px;" /></td>
                                            <td width="350px;">{{ people.description }}</td>
                                            <td>
                                                <a href="{{ path('acme_people_edit',{ 'id':people.id } ) }}" class="btn btn-primary">edit</a>
                                                <a href="{{ path('acme_people_delete',{ 'id':people.id } ) }}" class="btn btn-danger" onclick="return confirm('are sure delete?')">delete</a></li>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <!-- div>{{ paginator|raw }}</div--> 
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    {% endblock %}

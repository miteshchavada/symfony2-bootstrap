{% extends '::base.html.twig' %}
{% block body %}
    {% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Info Add Form</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <center>
                <form action="{{ path('acme_info_add') }}" method="post" {{ form_enctype(form) }} class="form-group" name="add">
                    {% if not form.vars.valid %}
                    <div class="alert alert-danger"> 
                        {{ form_errors(form) }}
                        {{ form_errors(form.title)}}
                        {{ form_errors(form.percentage) }}
                    </div>
                    {% endif %}
                    <div class="form-group col-lg-12">
                        {{ form_label(form.title, 'Title: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, { 'attr': {'class': 'form-control','placeholder': 'Title'} }) }}
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        {{ form_label(form.percentage, 'Percentage: ', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.percentage, { 'attr': {'class': 'form-control','placeholder': 'Description'} }) }}
                        </div>
                    </div>    
                    <div class="form-group col-lg-6">
                        <input type="submit" formnovalidate value="Save" name="insert" class="btn btn-primary"/>
                        <input type="reset" name="Reset" value="Reset" class="btn btn-danger" onclick="javascript:window.location.href = '{{ path('acme_info') }}'"/>
                    </div>
                </form>
            </center>			
        </div>
    {% endblock %}
{% endblock %}

{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Info List</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Info List
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="add"><button type="button" class="btn btn-primary btn-sm">Add Product</button></a></div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
				{% for flashMessage in app.session.flashbag.get('success') %}
				    <div class="alert alert-success" id="success">	
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					    {{ flashMessage }}
                                    </div>					
				{% endfor %}
                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-danger"> 
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                    <thead>
                                        <tr>
                                            <th>Serial No</th>
                                            <th>Title</th>
                                            <th>Percentage</th>
                                            <th>Created At</th>
                                            <th>Operations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
					{% for inf in info %}
					<tr class="gradeA">
					    <td>{{ loop.index }}</td>
					    <td>{{ inf.title }}</td>
					    <td width="400px;">{{ inf.percentage }}</td>
                                            <td>{{ inf.createdAt|date }}</td>
					    <td><a href="{{ path('acme_info_edit',{ 'id':inf.id } ) }}" class="btn btn-primary">edit</a>
					    <a href="{{ path('acme_info_delete',{ 'id':inf.id } ) }}" onclick="return confirm('are sure delete?')" class="btn btn-danger">delete</a></td>
					</tr>
					{% endfor %}
				   </tbody>
				</tr>
				</table>
			   </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
{% endblock %}
{% endblock %}

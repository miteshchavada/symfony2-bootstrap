{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Logo</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Logo
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="{{ path('acme_logoadd') }}"><button type="button" class="btn btn-primary btn-sm">Add Logo</button></a></div>
                        </div>
                        <!-- /.panel-heading -->
                        <div id="error" style="display:none;">Please Another Status Disable</div>
                        <div class="panel-body">
                            <div class="table-responsive">
				{% for flashMessage in app.session.flashbag.get('success') %}
				    <div class="alert alert-success" id="success">	
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					    {{ flashMessage }}
		                    </div>					
				{% endfor %}
				{% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-danger"> 
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
				{% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-danger"> 
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                    <thead>
                                        <tr>
                                            <th>Serial No</th>
                                            <th>Name</th>
                                            <th>Created At</th>
                                            <th>Operations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
					{% for log in logo %}
					<tr class="gradeA">
					    <td>{{ loop.index }}</td>
					    <td><img src="{{asset(['uploads/logo/', log.logo]|join)}}" style="width:80px; height: 50px;" /></td>
                                            <td>{{ log.createdAt|date }}</td>
					    <td><a href="{{ path('acme_logoedit',{ 'id': log.id } ) }}" class="btn btn-primary">edit</a>
					    <a href="{{ path('acme_logodelete',{ 'id' : log.id } ) }}" onclick="return confirm('are sure delete?')" class="btn btn-danger">delete</a>
                                            {% if is_granted('ROLE_ADMIN') %}
                                                {% if(log.status == '1') %}
                                                    <a href="javascript:void(0)" class="btn btn-success btn-logo-status" id="{{ log.id }}">Enable</a>
                                                    {#<a href="{{ path('acme_user_status',{ 'id' : user.id, 'stat' : user.enabled } ) }}" class="btn btn-success btn-status">Enable</a>#}
                                                {% else %}
                                                    <a href="javascript:void(0)" class="btn btn-danger btn-logo-status" id="{{ log.id }}">Disabled</a>
                                                    {#<a href="{{ path('acme_user_status',{ 'id' : user.id, 'stat' : user.enabled } ) }}" class="btn btn-danger btn-status">Disable</a>#}
                                                {% endif %}
                                            {% endif %}
                                            </td>
					</tr>
					{% endfor %}
				   </tbody>
				</tr>
				</table>
			   </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

{% endblock %}
{% endblock %}

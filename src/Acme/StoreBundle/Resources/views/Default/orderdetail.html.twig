{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Order Detail</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
    <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Order
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <tr>
                                        <td class="col-lg-6">Customer Name:-</td>
                                        <td class="col-lg-6">{{ order.Custname }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Customer Address:-</td>
                                        <td class="col-lg-6">{{ order.Custaddress }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Customer Phone:-</td>
                                        <td class="col-lg-6">{{ order.Custphone }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Customer Email:-</td>
                                        <td class="col-lg-6">{{ order.Custemail }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Customer Description:-</td>
                                        <td class="col-lg-6">{{ order.Custdescription }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Product Name:-</td>
                                        <td class="col-lg-6">{{ productName }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Category Name:-</td>
                                        <td class="col-lg-6">{{ category }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Quantity:-</td>
                                        <td class="col-lg-6">{{ order.Quantity }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6"></td>
                                        <td class="col-lg-6">X</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Price:-</td>
                                        <td class="col-lg-6">{{ order.Productprice }}</td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-6">Total:-</td>
                                        <td class="col-lg-6"> {{ order.Productprice  *  order.Quantity }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
{% endblock %}
{% endblock %}

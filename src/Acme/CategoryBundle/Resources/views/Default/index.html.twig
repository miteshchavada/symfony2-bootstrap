{% extends '::base.html.twig' %}
{% block body %}
{% block content %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Category</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Category List
				<div style="float:right; margin-top:-15px;" class="panel-heading"><a href="{{ path('category_add') }}"><button type="button" class="btn btn-primary btn-sm">Add Category</button></a></div>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
				{% for flashMessage in app.session.flashbag.get('success') %}
				    <div class="alert alert-success" id="success">	
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					    {{ flashMessage }}
                                    </div>					
				{% endfor %}
                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-danger"> 
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                    <thead>
                                        <tr>
                                            <th>Serial No</th>
                                            <th>Name</th>
                                            <th>Operations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
					{% for cat in category %}
                                         <tr class="gradeA">
                                            <td>{{ loop.index }}</td>
                                            <td>{{ cat.name }}</td>
                                            <td>
						<a href="{{ path('category_edit', {'id': cat.id } ) }}" class="btn btn-primary">edit</a>
        					<a href="{{ path('category_delete', { 'id': cat.id } ) }}" onclick="return confirm('are sure delete?')" class="btn btn-danger">delete</a>
                                                {% if(cat.status == 1) %}
                                                    <a href="javascript:void(0)" class="btn btn-success btn-category-status" id="{{ cat.id }}">Enable</a>
                                                    {#<a href="{{ path('acme_user_status',{ 'id' : user.id, 'stat' : user.enabled } ) }}" class="btn btn-success btn-status">Enable</a>#}
                                                {% else %}
                                                    <a href="javascript:void(0)" class="btn btn-danger btn-category-status" id="{{ cat.id }}">Disabled</a>
                                                    {#<a href="{{ path('acme_user_status',{ 'id' : user.id, 'stat' : user.enabled } ) }}" class="btn btn-danger btn-status">Disable</a>#}
                                                {% endif %}
                                                {#{% if(cat.status == '1') %}
                                                    <a href="{{ path('category_status', {'id' : cat.id, 'stat': cat.status } ) }}" class="btn btn-success">Enable</a>
						{% else %}
                                                    <a href="{{ path('category_status', {'id' : cat.id, 'stat': cat.status } ) }}" class="btn btn-danger">Disable</a>
						{% endif %}#}
					    </td>
                                        </tr>
					{% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        <!-- /.panel-body -->
                    </div>
                    </div>
                </div>
            </div>            
{% endblock %}
{% endblock %}
